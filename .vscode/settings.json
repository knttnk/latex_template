{
  "files.readonlyInclude": {
    "**/.git/**": true,
    "**/.output/**": true,
  },
  "latex-workshop.latex.outDir": "%DIR%/.output",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-outdir=%OUTDIR%",
        "-pdfdvi",  // Generate PDF via DVI
        "-file-line-error", // Make error messages file:line:error style
        "-halt-on-error", // Stop processing at the first error
        "-interaction=nonstopmode", // Stop without asking for user input
        "-gg",  // Clean up before building
        "%DOC%"
      ],
      "env": { }
    },
    {
      "name": "latexmk (lualatex)",
      "command": "latexmk",
      "args": [
        "-lualatex",
        "-outdir=%OUTDIR%",
        "-file-line-error", // Make error messages file:line:error style
        "-halt-on-error", // Stop processing at the first error
        "-interaction=nonstopmode", // Stop without asking for user input
        "-gg",  // Clean up before building
        "%DOC%"
      ],
      "env": { }
    },
  ],
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.autoClean.run": "onFailed",
}